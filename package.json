{
  "name": "laplace-fulfiller",
  "module": "index.ts",
  "type": "module",
  "version": "0.0.6",
  "private": true,
  "scripts": {
    "dev": "bun run src/index.ts | bunx pino-pretty",
    "once": "bun run src/index.ts --once | bunx pino-pretty",
    "diagnose": "bun run scripts/diagnose.ts | bunx pino-pretty",
    "graphql-codegen": "graphql-codegen",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "start": "bun run db:migrate && bun run src/index.ts",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "dependencies": {
    "@libsql/client": "^0.15.12",
    "@shopify/shopify-api": "^11.14.1",
    "croner": "^9.1.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "pino": "^9.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@shopify/api-codegen-preset": "^1.1.9",
    "@types/bun": "^1.2.20",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
